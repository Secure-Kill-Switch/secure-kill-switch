{
  "git": {
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "autoGenerate": true
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        {
          "file": "apps/app/src-tauri/Cargo.toml",
          "path": "package.version"
        },
        {
          "file": "apps/app/src-tauri/tauri.conf.json",
          "path": "package.version"
        },
        {
          "file": "apps/app/package.json"
        }
      ]
    }
  }
}
